isNewUser = true;

console.log(`Ú©Ø§Ø±Ø¨Ø± Ø¬Ø¯ÛŒØ¯ - Ú©Ø¯ Ù…Ø¹Ø±Ù Ø¬Ø¯ÛŒØ¯: ${userReferralCode}`);

}


